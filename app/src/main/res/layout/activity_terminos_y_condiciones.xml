
   <ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".terminos_y_condiciones">

    <!-- Your existing ConstraintLayout goes here -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/btnTerminosRetroceder"
            android:layout_width="75sp"
            android:layout_height="75sp"
            android:backgroundTint="@color/boton"
            android:gravity="center"
            android:text="@string/btnRetroceder"
            android:textColor="@color/black"
            android:textSize="50sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtTerminos"
            android:textColor="@color/black"
            android:layout_width="316dp"
            android:layout_height="1379dp"
            android:layout_marginTop="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtTituloTerminos"
            app:layout_constraintVertical_bias="0.0"
            tools:text="@string/txtTerminos" />

        <TextView
            android:id="@+id/txtTituloTerminos"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_width="289dp"
            android:layout_height="38dp"
            android:text="@string/txtTituloTerminos"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.058" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
